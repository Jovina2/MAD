<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/visitingcard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFBEA">

    <TextView
        android:id="@+id/companyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMPANY NAME"
        android:textAllCaps="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/employeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/companyName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/jobtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Software Engineer"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_below="@id/employeeName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <View
        android:id="@+id/horizontalline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#222222"
        android:layout_below="@id/jobtitle"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:+91 1234567890"
        android:textSize="16sp"
        android:textColor="#000000"
        android:drawableLeft="@android:drawable/ic_menu_call"
        android:drawablePadding="8dp"
        android:layout_below="@id/horizontalline"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123,Tech Street,Kerala"
        android:textSize="16sp"
        android:textColor="#000000"
        android:drawableLeft="@android:drawable/ic_menu_mylocation"
        android:drawablePadding="8dp"
        android:layout_below="@id/phoneNumber"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="john.doe@example.com"
        android:textSize="16sp"
        android:textColor="#000000"
        android:drawableLeft="@android:drawable/ic_dialog_email"
        android:drawablePadding="8dp"
        android:layout_below="@id/address"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.company.com"
        android:textSize="16sp"
        android:textColor="#000000"
        android:drawableLeft="@android:drawable/ic_menu_compass"
        android:drawablePadding="8dp"
        android:layout_below="@id/email"
        android:layout_marginTop="8dp" />


</RelativeLayout>
