<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBEA"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/name_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ann\nStudent"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textAlignment="center" />


    <LinearLayout
        android:id="@+id/icon_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chat"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/edit"
            android:layout_margin="8dp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/location"
        android:layout_below="@id/icon_row"
        android:layout_marginTop="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lives in Kozhikode"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_toEndOf="@id/location_icon"
        android:layout_alignBottom="@id/location_icon"
        android:layout_marginStart="8dp" />


    <ImageView
        android:id="@+id/college_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/college"
        android:layout_below="@id/location_icon"
        android:layout_marginTop="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp" />

    <TextView
        android:id="@+id/college_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KMCT College of Engineering"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_toEndOf="@id/college_icon"
        android:layout_alignBottom="@id/college_icon"
        android:layout_marginStart="8dp" />

</RelativeLayout>
